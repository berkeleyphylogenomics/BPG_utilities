}


.even {
    background: #E7E7E7;
}

.ColVis_Button {
    min-width: 110px;
    margin: 0px;
    padding: 4px;
}
.ColVis_collection .ColVis_Button {
    text-align: left;
}
.ColVis_collection .ColVis_Button .ColVis_radio {
    margin-right: 4px;
}


