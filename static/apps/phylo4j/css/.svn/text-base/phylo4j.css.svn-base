.explorer-display-main-holder {
    float:left;
    clear:both;
    width:100%;
}
.explorer-display {
    float:left;
    clear:both;
    width:100%;
    padding:0px;
    height:500px;
}
.explorer-display-table {
    width:100%;
    height:100%;
}
.explorer-display-table tr td:nth-child(1) {
    height:100%;
}
.explorer-display-table tr td:nth-child(2) {
    width:170px;
    height:100%;
    padding:5px;
    vertical-align:top;
}
.explorer-graph-display {
    height:100%;
    padding-top:10px;
    padding-bottom:10px;
}
.explorer-graph-display canvas {
    width:100%;
    height:100%;
}
.explorer-graph-toolbar {
    width:inherit;
    padding-left:5px;
    padding-right:5px;
    font-size:11px;
    height:100%;
    border:1px solid #A6C9E2;
}
.explorer-graph-toolbar p:nth-child(1) {
    color:#2E6E9E;
    margin-bottom:2px;
    margin-top:5px;
}
.explorer-graph-toolbar p:nth-child(2) {
    margin-bottom:5px;
    margin-top:2px;
}
.explorer-graph-toolbar p:nth-child(3) {
    vertical-align:top;
    margin-top:2px;
    margin-bottom:5px;
    text-align:center;
}
.explorer-graph-toolbar p:nth-child(3) button {
    vertical-align:top;
}
#refresh-graph {margin-left:5px;}
.explorer-properties-main-table {
    float:left;
    clear:both;
    width:100%;
}
.explorer-properties-main-table tr td {
    vertical-align:top;
}
.explorer-properties-main-table tr td:nth-child(1) {
    width:34%;
}
.explorer-properties-main-table tr td:nth-child(2) {
    width:33%;
}
.explorer-properties-main-table tr td:nth-child(3) {
    width:33%;
}
.explorer-property-subtable {
}
.explorer-property-subtable p:first-child {
    font-size:13px;
    color:#2E6E9E;
    text-decoration:underline;
    font-weight:bold;
    text-align:center;   
}
.this-node {
    font-size:11px;
}
.these-relations {
    font-size:11px;
}
.this-selection {
    font-size:11px;
}
.explorer-property-subtable td {
    width:auto !important;
    padding:0px 2px!important;
    border-bottom:1px solid #A6C9E2;
}
.explorer-property-subtable tr td:nth-child(2) {
    border-left:1px solid #A6C9E2;
}
.this-node-table th {}
.sequence-text {
    font-family:monospace;
    font-size:10px;
}
.first-col {
    padding-right:3px;
    border-right:1px solid #A6C9E2;
}
.second-col {
    padding-right:3px;
    padding-left:3px;
    border-right:1px solid #A6C9E2;
}
.third-col {
    padding-left:3px;
}
#edge-modal {
    font-size:11px;
}
.edge-checkbox-container span {
    padding-left:2px;
    padding-right:5px;
    border-right:1px solid #A6C9E2;
    white-space:nowrap; 
}
.ui-dialog {
    width:80% !important;
}
.ui-dialog-titlebar {
    font-size:0.9em;
}
.ui-dialog-buttonpane {
    font-size:0.9em;
}
