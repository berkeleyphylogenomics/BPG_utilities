/* For Global Styling */
/*.hidden {display:none;}*/
body {
    font-family: Verdana, Geneva, sans-serif;
}
/* For vertical tabs on front page */
.ui-tabs-vertical {width:65em;font-size:14px;}
.ui-tabs-vertical .ui-tabs-nav li { clear: left; width: 100%; border-bottom-width: 1px !important; border-right-width: 0 !important; margin: 0 -1px .2em 0; border:none !important;background:none !important;}
.ui-tabs-vertical .ui-tabs-nav li a { display:block; }
.ui-tabs-vertical .ui-tabs-nav li.ui-tabs-active { padding-bottom: 0; padding-right: .1em; border-right-width: 1px; border-right-width: 1px; }
.ui-tabs-vertical .ui-tabs-panel { padding: 1em; float: right; width: 52em; font-size:12px;}
.ui-tabs-vertical .ui-tabs-nav {padding:.2em .1em .2em .2em;float:left;width:18em;border:none !important;background:none !important;}
.ui-tabs-vertical .ui-tabs-anchor {float:right !important;}
.ui-tabs-panel p {margin-top:0px;}

/* index.html styling */
h3 {
    color:#2E6E9E;
    margin-left:10px;
    margin-bottom:5px;
}

/* for the phylo4j explorer styling */
.explorer-pane {
    width:100%;
    float:left;
    clear:both;
    padding:5px;
}
.explorer-title {
    width:100%;
}
.explorer-title tr td:nth-child(1) {
    width:33%;
}
.explorer-title tr td:nth-child(2) {
    width:34%;
    text-align:center;
    vertical-align:bottom;
}
.explorer-title tr td:nth-child(3) {
    width:33%;
    vertical-align:bottom;
    text-align:right;
}
.graph-title {
    font-size:18px;
    color:#2E6E9E;
    margin-bottom:0px;
    margin-top:0px; 
}   
.app-title {
    font-size:14px;
    color:blue;
    margin-bottom:0px;
    margin-top:0px;
}
.instruction-text {
    font-size:11px;
    margin-top:2px;
    margin-bottom:0px;
}
.search-error {
    font-size:11px;
    margin-top:2px;
    margin-bottom:0px;
    color:red;
}
.explorer-loading-status {
    font-size:11px;
    margin-top:2px;
    margin-bottom:0px;
    color:green;
}
.explorer-search-loading {
}
#explorer-search-input {
    padding-top:2px;
    padding-bottom:2px;
    padding-left:5px;
    height:25px;
    font-size:12px;
}
#explorer-search-button {
    font-size:12px;
    padding:3px 12px; 
} 
